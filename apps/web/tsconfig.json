{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@app": ["./app"],
      "@app/*": ["./app/*"],
      "@components": ["./components"],
      "@components/*": ["./components/*"],
      "@configs": ["./configs"],
      "@configs/*": ["./configs/*"],
      "@libs": ["./libs"],
      "@libs/*": ["./libs/*"],
      "@locales": ["./public/locales"],
      "@locales/*": ["./public/locales/*"],
      "@types": ["./types"],
      "@types/*": ["./types/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
